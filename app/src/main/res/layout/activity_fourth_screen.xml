<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthScreen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
    />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#918F8F"
        android:layout_below="@id/toolbar"
        />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backarrow"
        android:contentDescription="Back"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Verification"
        android:textSize="20sp"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="45dp"
        />

    <TextView

        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the code sent to your email"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend code in 23s"
        android:textSize="10sp"
        android:textColor="#FF9800"
        android:layout_below="@+id/enter"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/resend"
        />

    <LinearLayout
        android:id="@+id/firstlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resend"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/square"
            android:gravity="center"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/square"
            android:gravity="center"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/square"
            android:gravity="center"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/square"
            android:gravity="center"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/square"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstlayout"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="2"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="3"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondlayout"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="4"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="6"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourthlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdlayout"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="7"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="8"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="9"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fifthlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthlayout"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="143dp"
            android:background="@drawable/circlenumber"
            android:gravity="center"
            android:text="0"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="âŒ«"
            android:textStyle="bold"
            android:textSize="24sp"
            />
    </LinearLayout>


</RelativeLayout>
