<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixthScreen">




    <RelativeLayout
        android:id="@+id/firstRealtive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstLinear"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find exactly what you need!"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLinear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/firstLinear"
            android:background="@drawable/rectangle"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"

        >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:paddingTop="5dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondLinear"
            android:layout_marginTop="20dp"
            android:id="@+id/secondRelative"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/firsttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Searches"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Number One"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_below="@+id/firsttext"
                android:layout_marginTop="10dp"
                android:id="@+id/secondtext"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowoutward"
                android:layout_below="@id/firsttext"
                android:layout_toRightOf="@id/secondtext"
                android:paddingTop="15dp"
                android:layout_marginLeft="90dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Number Two"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_below="@+id/secondtext"
                android:layout_marginTop="10dp"
                android:id="@+id/thirdtext"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowoutward"
                android:layout_below="@id/secondtext"
                android:layout_toRightOf="@id/thirdtext"
                android:paddingTop="15dp"
                android:layout_marginLeft="87dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Number Three"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_below="@+id/thirdtext"
                android:layout_marginTop="10dp"
                android:id="@+id/fourthtext"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowoutward"
                android:layout_below="@id/thirdtext"
                android:layout_toRightOf="@id/fourthtext"
                android:paddingTop="15dp"
                android:layout_marginLeft="80dp"
                />


            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popular Searches"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@+id/fourthtext"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Number One"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_below="@+id/text1"
                android:layout_marginTop="10dp"
                android:id="@+id/text2"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowoutward"
                android:layout_below="@id/text1"
                android:layout_toRightOf="@id/text2"
                android:paddingTop="15dp"
                android:layout_marginLeft="90dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Number Two"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_below="@+id/text2"
                android:layout_marginTop="10dp"
                android:id="@+id/text3"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowoutward"
                android:layout_below="@id/text2"
                android:layout_toRightOf="@id/text3"
                android:paddingTop="15dp"
                android:layout_marginLeft="87dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Number Three"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_below="@+id/text3"
                android:layout_marginTop="10dp"
                android:id="@+id/text4"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowoutward"
                android:layout_below="@id/text3"
                android:layout_toRightOf="@id/text4"
                android:paddingTop="15dp"
                android:layout_marginLeft="80dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Number Four"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_below="@+id/text4"
                android:layout_marginTop="10dp"
                android:id="@+id/text5"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowoutward"
                android:layout_below="@id/text4"
                android:layout_toRightOf="@id/text5"
                android:paddingTop="15dp"
                android:layout_marginLeft="83dp"
                />


        </RelativeLayout>




    </RelativeLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="20dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp"
        app:itemIconTint="#ff9800"
        >
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottomnavigation"
            android:layout_marginEnd="16dp"
            app:itemIconTint="@drawable/iconselector"
            app:itemTextColor="@drawable/titleselector"
            />


    </com.google.android.material.bottomappbar.BottomAppBar>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floatingbutton"
        android:src="@drawable/add"
        app:layout_anchor="@id/bottombar"
        app:backgroundTint="#ff9800"
        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>