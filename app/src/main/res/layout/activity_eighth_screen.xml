<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EighthScreen"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDCBCB"
        android:layout_below="@id/toolbar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"

        />

    <RelativeLayout
        android:id="@+id/firstRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/line"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/adil"
            android:contentDescription="Image"
            app:civ_border_width="2dp"
            app:civ_border_color="#000000" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/circularImageView"
            android:text="Makenna Dias"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 new message"
            android:layout_toRightOf="@id/circularImageView"
            android:layout_below="@id/text"
            android:layout_marginLeft="16dp"
            android:textSize="20dp"
            android:textColor="#ff9800"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/rightarrow"
            android:layout_toRightOf="@id/text"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/circularImageView" />
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAA8A8"
            android:layout_below="@id/toolbar1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/secondRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/firstRelative"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularImageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/adil"
            android:contentDescription="Image"
            app:civ_border_width="2dp"
            app:civ_border_color="#000000" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/circularImageView1"
            android:text="Miracle Philips"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No new message"
            android:layout_toRightOf="@id/circularImageView1"
            android:layout_below="@id/text1"
            android:layout_marginLeft="16dp"
            android:textSize="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/rightarrow"
            android:layout_toRightOf="@id/text1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="45dp"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/circularImageView1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAA8A8"
            android:layout_below="@id/toolbar2" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/thirdRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/secondRelative"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularImageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/adil"
            android:contentDescription="Image"
            app:civ_border_width="2dp"
            app:civ_border_color="#000000" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/circularImageView2"
            android:text="Zaire Gouse"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No new message"
            android:layout_toRightOf="@id/circularImageView2"
            android:layout_below="@id/text2"
            android:layout_marginLeft="16dp"
            android:textSize="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/rightarrow"
            android:layout_toRightOf="@id/text2"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            />
    </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="20dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp"
        app:itemIconTint="#ff9800"
        >
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottomnavigation"
            android:layout_marginEnd="16dp"
            app:itemIconTint="@drawable/iconselector"
            app:itemTextColor="@drawable/titleselector"
            />


    </com.google.android.material.bottomappbar.BottomAppBar>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floatingbutton"
        android:src="@drawable/add"
        app:layout_anchor="@id/bottombar"
        app:backgroundTint="#ff9800"
        />



</androidx.coordinatorlayout.widget.CoordinatorLayout>