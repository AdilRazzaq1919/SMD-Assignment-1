<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FifteenScreen">
    
    
    <LinearLayout
        android:id="@+id/linearfirst"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="#C6C5C5"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cross"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lightmode"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/accesstime"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearsecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearfirst"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/insertphoto"
            android:background="@drawable/circlenumber"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cameraclick"
            android:background="@drawable/circlenumber"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cameraflip"
            android:background="@drawable/circlenumber"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearsecond"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:backgroundTint="#ff9800"
            android:text="Photo"
            android:textSize="25sp"
            android:layout_marginLeft="85dp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>

</RelativeLayout>